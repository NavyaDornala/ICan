<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/editText2"
        style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:width="@android:dimen/thumbnail_width"
        android:ems="10"
        android:hint="Enter Your Text"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:gravity="bottom"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:visibility="visible" />


    <ImageButton
        android:id="@+id/imageButton"
        style="@android:style/Widget.Holo.Light.CalendarView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:background="@color/GhostWhite"
        android:tint="@color/Black"
        android:src="@android:drawable/ic_lock_silent_mode_off" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageButton"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_touch_app_black_24dp"
        android:tint="@color/LemonChiffon"
        app:backgroundTint="@color/primaryTextColor" />


</RelativeLayout>
